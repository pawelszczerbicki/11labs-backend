{
  "name": "backend",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "description": "",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run gcp-build",
    "pretest": "npm run gcp-build",
    "build": "tsc",
    "gcp-build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "start": "node ./dist/index",
    "lint": "eslint . --ext .ts",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.41.0",
    "@google-cloud/storage": "^7.12.1",
    "@google-cloud/tasks": "^5.5.0",
    "@sendgrid/mail": "^8.1.4",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "date-fns": "^3.6.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "firebase-admin": "^12.3.1",
    "json2csv": "^6.0.0-alpha.2",
    "mongodb": "^4.1.3",
    "smsapi": "^2.0.13",
    "stripe": "^17.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.3.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^7.0.0",
    "jest": "^29.7.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.2",
    "prettier": "^3.3.3",
    "supertest": "^4.0.2",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "tslint": "^6.1.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "yarn eslint --max-warnings=0",
      "tsc-files --noEmit",
      "prettier src/** --write",
      "git add ."
    ],
    "*.ts": "eslint --cache --fix",
    "*.{js,md}": "prettier --write"
  }
}
